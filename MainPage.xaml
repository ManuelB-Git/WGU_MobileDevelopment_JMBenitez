<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WGU_MobileDevelopment_JMBenitez.MainPage">

        <VerticalStackLayout Margin="20"
                             Spacing="20">
            <Button
                HorizontalOptions="End"
                Text="Add Term"/>
            
            
            <Label Text="Terms"/>

        <CollectionView x:Name="TermsCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <StackLayout>
                            <Label x:Name="TermTitle" 
                                   FontSize="18" 
                                   FontAttributes="Bold"/>
                            <Label x:Name="TermStartDate"
                                   FontSize="14" />
                            <Label x:Name="TermEndDate" 
                                   FontSize="14" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>






    </VerticalStackLayout>
   

</ContentPage>
